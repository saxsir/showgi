<h1>Showgi</h1>

<% if user_signed_in? %>
<p>You are <%= current_user.email %></p>
<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to 'Login', new_user_session_path %>
<% end %>

<h2>新着順</h2>
<ul>
  <% @kifus_order_by_created_at.each do |kifu| %>
  <li><%= link_to kifu.title, kifu %>: 登録日<%= kifu.created_at.to_date %></li>
  <% end %>
</ul>

<h2>人気ランキング</h2>
<ul>
  <% @kifus_order_by_view.each do |kifu| %>
  <li><%= link_to kifu.title %>: 総閲覧数<%= kifu.view %></li>
  <% end %>
</ul>



